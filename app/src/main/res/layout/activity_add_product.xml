<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    android:gravity="center"
    android:layout_marginTop="40dp">

    <!-- CardView chá»©a cÃ¡c trÆ°á»ng nháº­p liá»‡u -->
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TÃªn sáº£n pháº©m -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_product_name"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/gray" />

                <EditText
                    android:id="@+id/etProductName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="TÃªn sáº£n pháº©m"
                    android:background="@drawable/edittext_rounded_background"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/jetbrains_mono"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray" />
            </LinearLayout>

            <!-- GiÃ¡ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_price"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/gray" />

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="GiÃ¡ (VNÄ)"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_rounded_background"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/jetbrains_mono"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray" />
            </LinearLayout>

            <!-- áº¢nh chÃ­nh -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_image"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/gray" />

                <EditText
                    android:id="@+id/etMainImageUrl"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="ÄÆ°á»ng dáº«n áº£nh chÃ­nh"
                    android:background="@drawable/edittext_rounded_background"
                    android:padding="12dp"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/jetbrains_mono"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray" />

                <ImageButton
                    android:id="@+id/ibPickImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_image"
                    android:background="@drawable/rounded_icon_background"
                    android:contentDescription="Chá»n áº£nh chÃ­nh"
                    android:layout_marginStart="8dp" />

                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/image_preview_background" />
            </LinearLayout>

            <!-- MÃ´ táº£ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_description"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/gray" />

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="MÃ´ táº£ sáº£n pháº©m"
                    android:background="@drawable/edittext_rounded_background"
                    android:padding="12dp"
                    android:minLines="3"
                    android:maxLines="5"
                    android:textSize="16sp"
                    android:fontFamily="@font/jetbrains_mono"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray" />
            </LinearLayout>

            <!-- áº¢nh mÃ´ táº£ bá»• sung -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_images"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/gray" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="áº¢nh mÃ´ táº£ bá»• sung ðŸ“¸"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/jetbrains_mono"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibPickAdditionalImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_image"
                        android:background="@drawable/rounded_icon_background"
                        android:contentDescription="Chá»n áº£nh bá»• sung" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewImages"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="100dp"
                        android:paddingStart="8dp"
                        android:paddingTop="8dp"
                        android:background="@drawable/recycler_background"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- NÃºt LÆ°u Sáº£n Pháº©m -->
    <Button
        android:id="@+id/btnSaveProduct"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient_button_background"
        app:backgroundTint="#4A90E2"
        android:fontFamily="@font/jetbrains_mono_semibold"
        android:text="LÆ°u Sáº£n Pháº©m ðŸ’¾"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:elevation="4dp" />
</LinearLayout>