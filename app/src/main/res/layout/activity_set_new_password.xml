<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Nút quay lại -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/left"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="16dp"
        android:layout_gravity="start" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo mật khẩu mới"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="32dp" />

    <!-- Hướng dẫn -->
    <TextView
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="fill_vertical"
        android:maxWidth="300dp"
        android:text="Tạo một mật khẩu mới. \nĐảm bảo mật khẩu khác với các mật khẩu trước đó để bảo mật"
        android:textColor="#666666"
        android:textSize="16sp" />

    <!-- Ô nhập Password -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:text="********"
        android:textColorHint="#999999"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        android:maxWidth="300dp" />

    <!-- Ô nhập Confirm Password -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"
        android:text="********"
        android:textColorHint="#999999"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:maxWidth="300dp" />

    <!-- Nút Update Password -->
    <Button
        android:id="@+id/btnUpdatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Cập nhật mật khẩu"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#4A90E2"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        android:maxWidth="300dp" />

</LinearLayout>