<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Ảnh chính sản phẩm -->
        <ImageView
            android:id="@+id/ivDialogProductImage"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:contentDescription="Hình ảnh sản phẩm"
            android:src="@drawable/product_placeholder"
            android:background="@drawable/rounded_image_background"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tiêu đề ảnh bổ sung -->
        <TextView
            android:id="@+id/tvAdditionalImagesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ảnh mô tả bổ sung"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#424242"
            app:layout_constraintTop_toBottomOf="@id/ivDialogProductImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <!-- RecyclerView cho ảnh bổ sung -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewImages"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:padding="8dp"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvAdditionalImagesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Tên sản phẩm -->
        <EditText
            android:id="@+id/etDialogProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tên sản phẩm"
            android:background="@drawable/edittext_rounded_background"
            android:padding="12dp"
            android:enabled="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#212121"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewImages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Giá sản phẩm -->
        <EditText
            android:id="@+id/etDialogPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Giá (VNĐ)"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_rounded_background"
            android:padding="12dp"
            android:enabled="false"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/etDialogProductName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Mô tả sản phẩm -->
        <EditText
            android:id="@+id/etDialogDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Mô tả sản phẩm"
            android:background="@drawable/edittext_rounded_background"
            android:padding="12dp"
            android:minLines="3"
            android:maxLines="5"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/etDialogPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Số lượng sản phẩm với nút tăng giảm -->
        <TextView
            android:id="@+id/tvQuantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng:"
            android:textSize="16sp"
            android:textColor="#757575"
            app:layout_constraintTop_toBottomOf="@id/etDialogDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/quantityLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/quantity_background"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/etDialogDescription"
            app:layout_constraintStart_toEndOf="@id/tvQuantityLabel"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp">

            <Button
                android:id="@+id/btnDecrease"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/btn_minus"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/etQuantity"
                android:layout_width="50dp"
                android:layout_height="36dp"
                android:inputType="number"
                android:text="1"
                android:gravity="center"
                android:background="@null"
                android:enabled="false"
                android:textSize="16sp"
                android:textColor="#212121" />

            <Button
                android:id="@+id/btnIncrease"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:textSize="16sp"
                android:background="@drawable/plus"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Tổng giá -->
        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 VNĐ"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/quantityLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Địa chỉ giao hàng -->
        <EditText
            android:id="@+id/etShippingAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ giao hàng"
            android:background="@drawable/edittext_rounded_background"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTotalPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Số điện thoại -->
        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:background="@drawable/edittext_rounded_background"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etShippingAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Nút Mua ngay -->
        <Button
            android:id="@+id/btnBuyNow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mua Ngay"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/etPhoneNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            app:cornerRadius="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>