<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Tiêu đề dialog -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi Tiết Sản Phẩm"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Ảnh sản phẩm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDialogProductImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:contentDescription="Hình ảnh sản phẩm"
            android:src="@drawable/product_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp">

            <EditText
                android:id="@+id/etDialogMainImageUrl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Đường dẫn ảnh chính"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:enabled="false" />

            <ImageButton
                android:id="@+id/ibPickDialogImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_image"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Chọn ảnh mới" />
        </LinearLayout>
    </LinearLayout>

    <!-- Tên sản phẩm -->
    <EditText
        android:id="@+id/etDialogProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:enabled="false" />

    <!-- Giá sản phẩm -->
    <EditText
        android:id="@+id/etDialogPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá (VNĐ)"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:enabled="false" />

    <!-- Mô tả sản phẩm -->
    <EditText
        android:id="@+id/etDialogDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả sản phẩm"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:minLines="3"
        android:maxLines="5"
        android:enabled="false" />

    <!-- Phần hiển thị và chỉnh sửa ảnh bổ sung -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ảnh mô tả bổ sung"
        android:textStyle="bold"
        android:paddingTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etDialogAdditionalImages"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Danh sách ảnh bổ sung (phân cách bằng dấu phẩy)"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:enabled="false"
            android:minLines="2"
            android:maxLines="3" />

        <ImageButton
            android:id="@+id/ibPickAdditionalImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_image"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Chọn ảnh bổ sung" />
    </LinearLayout>

    <!-- Nút Sửa và Xóa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnEditProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sửa"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/blue"
            android:textColor="@android:color/white"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnDeleteProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xóa"
            android:background="@drawable/rounded_button"
            app:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

</LinearLayout>